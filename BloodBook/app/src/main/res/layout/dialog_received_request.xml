<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/curve_shape"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="70dp"
            android:textSize="21sp"
            android:layout_height="54dp"
            android:layout_marginRight="15dp"
            android:text="Name:"/>
        <TextView
            android:id="@+id/acc_name_text"
            android:layout_width="200dp"
            android:layout_height="54dp"
            android:textSize="21sp"
            android:text="Urjaswit"
            android:hint=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="60dp"
            android:layout_marginRight="15dp"
            android:textSize="21sp"
            android:layout_height="54dp"
            android:text="Email:"/>
        <TextView
            android:layout_width="210dp"
            android:id="@+id/acc_email_text"
            android:inputType="textMultiLine"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:text="urjaswitkumarsingh@gmail.com"
            android:hint=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:textSize="21sp"
            android:layout_marginRight="15dp"
            android:layout_height="54dp"
            android:text="Blood Group:"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="54dp"
            android:id="@+id/acc_blood_text"
            android:textSize="21sp"
            android:text="B+"
            android:hint=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="68dp"
            android:textSize="21sp"
            android:layout_marginRight="15dp"
            android:layout_height="54dp"
            android:text="Phone:"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="54dp"
            android:id="@+id/acc_phone_text"
            android:textSize="21sp"
            android:text="+917890451616"
            android:hint=""/>
        <Button
            android:id="@+id/call_to_acceptor_btn"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@android:drawable/sym_action_call"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="100dp"
            android:textSize="21sp"
            android:id="@+id/acc_ok_btn"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:layout_height="54dp"
            android:text="Ok"/>
        <Button
            android:layout_width="110dp"
            android:layout_height="54dp"
            android:id="@+id/acc_cancel_btn"
            android:textSize="21sp"
            android:text="Cancel"
            android:hint=""/>
    </LinearLayout>




</LinearLayout>